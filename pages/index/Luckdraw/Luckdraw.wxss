.header{
  border-bottom: 0.5rpx solid #EFEFEF;
}
.header .title{
  color: #333333;
  font-size:36rpx;
  font-weight:500;
}
.list{
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}
.list_left{
  margin-left: 30rpx;
}
.list_left image{
  width: 202rpx;
  height: 202rpx;
}
.list_right{
  margin-left: 30rpx;
  width: 100%;
  border-bottom: 1rpx solid #E5E5E5; 
  padding-bottom: 39rpx;
}
.list_right .truncation{
  width: 435rpx;
  overflow: hidden;
}
.list_right .word_1 text{
  color: #333333;
  font-size: 32rpx;
  font-weight: 500;
}
.list_right .word_2 text{
  color: #999999;
  font-size: 24rpx;
}
.list_right .word_3 text{
  color: #FF233D;
  font-size: 26rpx;
  font-weight: 500;
}
