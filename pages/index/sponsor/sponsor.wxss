  color:rgba(255,255,255,1);
}
.count{
  padding: 30rpx 0;
  position: relative;
}
.XZ3{
  height:59rpx;
  width: 1px ;
  background: #fff;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%)
}
.count>view{
  width: 50%;
  text-align: center;
  font-size:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  display: inline-block;
  line-height: 48rpx;
}
.opacity{
  display:flex;
  flex-direction: row;
  align-items: center;
  width:100%;
  height:80rpx;
  background:rgba(0,0,0,1);
  opacity:0.3;
}
.opacity image{
  width:40rpx;
  height:40rpx;
  margin-left: 30rpx;
  margin-right: 12rpx;
  background: green;
  border-radius: 50%;
}
.opacity text{
  font-size:28rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.opacity button{
  width:145rpx;
  height:48rpx;
  background:rgba(255,255,255,1);
  opacity:0.3;
  border-radius:24rpx;
  line-height: 48rpx;
  font-size:23rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:#00f;
  margin-left:396rpx;
}
