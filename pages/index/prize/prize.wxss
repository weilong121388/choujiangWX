.outer{
  width:100%;
  background: #EFEFEF;
}
.aaa{
  background: #fff;
  color:#000;
}
.inner{
  width:750rpx;
  background:linear-gradient(90deg,rgba(249,182,0,1),rgba(255,35,61,1));
  display: flex;
  flex-direction: column;           
  align-items: center;
}
.inner text:first-child{
  padding-top: 40rpx;
  padding-bottom: 27rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(255,255,255,1);
}
.inner text{
  font-size:30rpx;
  padding-bottom:30rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.btn{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.btn button:first-child{
  width:252rpx;
  height:82rpx;
  background:rgba(255,44,57,1);
  border-radius:41rpx;
  margin-right: 36rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(239,239,239,1);
  line-height: 82rpx;
}
.btn button:last-child{
  width:252rpx;
  height:82rpx;
  background:rgba(250,168,6,1);
  border-radius:41rpx;
  margin-bottom: 30rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(239,239,239,1);
  line-height: 82rpx;
}
.lists_box{
  width: 100%;
  height: 100%;
  margin-top: 20rpx;
}
.lists{
  width: 100%;
  background: #fff;
  position: relative;
  margin-bottom: 30rpx;
}
.lists_con{
  padding: 12rpx 30rpx;
  position: absolute;
  top: 30rpx;
  right: 0;
  border-radius: 50rpx 0 0 50rpx;
  background: red;
  text-align: center;
  font-size:24rpx;
  color:rgba(255,255,255,1);
  background:linear-gradient(90deg,rgba(249,182,0,1),rgba(255,35,61,1));
}
.lists_top{
  width: 100%;
  height: 360rpx;
}
.lists_top>image{
  width: 100%;
  height: 100%;
}
.lists_tit{
  padding:30rpx;
}
.lists_name{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(255,35,61,1);
  margin-bottom: 25rpx;
}
.mr_rg{
  margin-right: 20rpx;
}
.lists_num{
  font-size:32rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  font-family:PingFang-SC-Medium;
  margin-bottom: 25rpx;
}
.lists_time{
  font-size:24rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
}
.lists_cont{
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}