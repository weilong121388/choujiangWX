page {
  width: 100%;
  height: 100vh;
  background-color: #f7f7f7;
}
.aaa{
  background-color:rgba(255, 255, 255, 1);
  color: #000; 
}
.img {
  width: 100%;
  height: auto;
  background: rgba(255, 255, 255, 1);
  padding: 33rpx 5%;
  position: relative;
  margin-top: 33rpx;
}

.tp {
  width: 90%;
  height: 360rpx;
}

.rit {
  width: 212rpx;
  height: 46rpx;
  background: linear-gradient(90deg, rgba(249, 182, 0, 1), rgba(255, 35, 61, 1));
  border-radius: 23rpx 0 0 23rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 46rpx;
  text-align: center;
  position: absolute;
  top: 30rpx;
  right: 0;
}

.zz {
  width: 90%;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 35, 61, 1);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-bottom: 30rpx;
}

.zz :nth-child(2) {
  margin-left: 15rpx;
}

.jp {
  width: 90%;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  margin-bottom: 29rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.jp1 {
  width: 90%;
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 30rpx;
}

.time {
  width: 90%;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-bottom: 30rpx;
}

.fot {
  width: 90%;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  border-top: 1rpx solid rgba(229, 229, 229, 1);
  padding: 30rpx 0 0 0;
}

.but {
  width: 90%;
  height: 72rpx;
  background: linear-gradient(90deg, rgba(249, 182, 0, 1) 0%, rgba(255, 35, 61, 1) 100%);
  border-radius: 36rpx;
  line-height: 72rpx;
  margin: 0 auto;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-top: 83rpx;
}
