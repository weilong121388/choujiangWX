/* pages/personalCenter/invite/invite.wxss */

page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(0deg, rgba(249, 182, 0, 1), rgba(255, 35, 61, 1));
  background-size: cover;
}

/* 头部 */

.head {
  background-color: #fff;
}

/* 图片 */

.banners {
  width: 100%;
  height: 275rpx;
}

.banner {
  width: 100%;
  height: 275rpx;
}

/* 背景 */

.back_middle {
  padding: 30rpx;
}

/* 白色背景 */

.back_in {
  background-color: #fff;
  border-radius: 10px 10px 0px 0px;
}

/* 文字横向排列 */

.rowsa {
  display: flex;
  height: 87rpx;
  align-items: center;
}

/* 文字设置 */

.rowsa text {
  font-size: 28rpx;
  color: #333;
  display: block;
}

.rowsa text:nth-child(1) {
  width: 124rpx;
  text-align: center;
}

.rowsa text:nth-child(2) {
  flex: 1;
  text-align: center;
}

.rowsa text:nth-child(3) {
  width: 207rpx;
  text-align: center;
}

/* 头像图片设置 */
.rows-box{
  width: 124rpx;
}
.img_bj {
  border-radius: 50%;
  width: 70rpx;
  height: 75rpx;
  background: linear-gradient(90deg, rgba(249, 182, 0, 1), rgba(255, 35, 61, 1));
  margin: 0 auto;
}

/* 头像 */

.tx {
  width: 65rpx;
  height: 65rpx;
  border-radius: 50%;
  position: relative;
  top: 7rpx;
  left: 3rpx;
}

/* 皇冠 */

.img_2 {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  bottom: 85rpx;
  left: 45rpx;
}

/* V图片 */

.img_3 {
  width: 19rpx;
  height: 17rpx;
  position: relative;
  bottom: 30rpx;
  left: 20rpx;
}

/* 昵称和返利内容文字设置 */

.rows {
  display: flex;
  align-items: center;
  height: 100rpx;
}

.rows view {
  font-size: 28rpx;
  color: #999;
}


.rows view:nth-child(3) {
  width: 206rpx;
  color: #ff4e00;
  text-align: center;
}

/* 奇偶变色,奇变偶不变 */

.rows:nth-child(odd) {
  background-color: #efefef;
}

.rows:nth-child(even) {
  background-color: #fff;
}

/* 滚动条隐藏 */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
