}

/* 输入框 */

.see {
  background-color: #fff;
  height: 200rpx;
  padding: 0 40rpx;
}

/* 布局 */
.buju {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 25rpx;
