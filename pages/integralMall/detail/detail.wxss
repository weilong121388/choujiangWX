/* pages/integralMall/detail/detail.wxss */
page{
  background-color: rgb(239, 239, 239);
  width: 100%;
}
.top{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  position: relative;
}
/* 箭头 */
.jiantou{
  z-index: 1000;
  width: 20rpx;
  height: 36rpx;
  position: absolute;
  top: 30rpx;
  left: 30rpx;
}
/* 轮播图页数 */
.num{
  width: 72rpx;
  height: 40rpx;
  line-height: 40rpx;
  background:rgba(0,0,0,0.36);
  border-radius:20rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  position: absolute;
  top: 670rpx;
  right: 50rpx;
}
/* 轮播图 */
.swiper{
  width: 100%;
  height: 750rpx;
}
/* 轮播图下的文字 */
.txt{
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.txt1{
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  padding: 10rpx 0;
}
.txt2{
  font-size:40rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,35,61,1);
  padding-bottom: 30rpx;
}
.txt2 text{
  font-size:26rpx;
}
/* 产品详情 */
.xiangqing{
  width: 100%;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 30rpx;
}
.xiangqing text{
  font-size:30rpx;
  font-weight:bold;
  color:rgba(249,86,13,1);
  padding: 20rpx 0;
}
.chanpin{
  width: 100%;
  height: 933rpx;
}
/* 提交按钮 */
.sub{
  width:750rpx;
  height:89rpx;
  line-height: 89rpx;
  background:linear-gradient(90deg,rgba(249,182,0,1),rgba(255,35,61,1));
  font-size:30rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
}
/* 弹出层 */
.tanchuceng{
  width: 100%;
  height: 100vh;
  background-color: rgba(0,0,0,0.36);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
}
.white{
  width: 600rpx;
  height: 493rpx;
  background-color: #ffffff;
  position: absolute;
  bottom: 400rpx;
}
.anniu{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  bottom: 0;
}
.anniu view{
  width: 50%;
  height: 100%;
  font-size:30rpx;
  font-weight:400;
  text-align: center;
}
.red{
  color: red;
}
.hongbao{
  width: 100%;
  height: 320rpx;
  position: absolute;
  bottom: 300rpx;
}
.duihuan{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size:30rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  position: absolute;
  top: 200rpx;
}
.duihuan text{
  padding: 10rpx 0;
}
