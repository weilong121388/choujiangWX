/* pages/integralMall/address.wxss */
page{
  background-color: rgb(239, 239, 239);
  width: 100%;
}
.dizhi{
  background-color: #ffffff;
}
/* 商品 */
.con{
  margin-top: 5rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
}
.conone{
  width: 90%;
  display: flex;
  justify-content: space-between;
  padding: 25rpx 0;
}
/* 图片 */
.pic{
  width: 202rpx;
  height: 202rpx;
}
/* 文字 */
.tit{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.tit>view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.tit1{
  width: 454rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.tit2{
  width: 454rpx;
  font-size:22rpx;
  font-family:PingFang-SC-Medium;
  color:#000000;
  text-align: right;
}
.tit2 text{
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
}
/* 输入 */
.shuru{
  margin-top: 40rpx;
}
.data{
  width: 90%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgb(239, 239, 239);
}
.left{
  font-size:29rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.right{
  font-size: 36rpx;
  color: rgba(51,51,51,1)
}
.noborder{
  width: 90%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 提交按钮 */
.sub{
  width:750rpx;
  height:89rpx;
  line-height: 89rpx;
  background:linear-gradient(90deg,rgba(249,182,0,1),rgba(255,35,61,1));
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
  text-align: center;
  margin-top: 300rpx;
}
/* picker选择器 */
.picker{
  width: 430rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color: rgba(51,51,51,1);
  margin-left: 0;
}