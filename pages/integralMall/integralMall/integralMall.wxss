/* pages/integralMall/integralMall.wxss */
/* 整个页面 */
page{
  background-color: rgb(239, 239, 239);
  width: 100%;
  padding-bottom: 40rpx;
}
/* 头部组件 */
.jianbian{
  color: #ffffff;
  background: linear-gradient(to right, rgb(249, 180, 1) , rgb(255, 0, 0));
}
/* 积分和奖金 */
.top{
  width: 100%;
  /* height: 144rpx; */
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
}
.topone{
  width: 46%;
  height: 144rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
/* 文字 */
.txt{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.txt1{
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(102,102,102,1);
}
.txt2{
  font-size:22rpx;
  font-family:PingFang-SC-Regular;
  font-weight:400;
  color:rgba(249,170,5,1);
  padding-top: 10rpx;
}
/* 图标 */
.jifen{
  width: 84rpx;
  height: 84rpx;
}
/* 内容 */
.con{
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  margin-bottom: 50rpx;
}
.conone{
  width: 90%;
  display: flex;
  justify-content: space-between;
  padding: 25rpx 0;
}
/* 图片 */
.pic{
  width: 202rpx;
  height: 202rpx;
}
/* 文字 */
.tit{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.tit>view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.tit1{
  width: 454rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.tit2{
  width: 454rpx;
  font-size:40rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,35,61,1);
}
.tit2 text{
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
}