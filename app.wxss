page, view, scroll-view, swiper, movable-area, cover-view, text, icon, rich-text,
progress, button, checkbox-group, checkbox, form, input, label, picker,
picker-view, radio-group, slider, switch, textarea, navigator, audio, image,
video, live-player, live-pusher, open-data, web-view {
  box-sizing: border-box;
}

/* 清除小程序默认样式 */

button {
  margin: 0;
  padding: 0;
  font-size: medium;
  text-align: center;
  line-height: normal;
  border-radius: 0;
  -webkit-tap-highlight-color: none;
  overflow: visible;
  color: #000;
  background: none;
}

button::after {
  border: none;
}

input {
  height: auto;
}

image {
  width: auto;
  height: auto;
  overflow: visible;
}

.button-hover {
  background: none;
}

/* 浮动 */

.fleft {
  float: left;
}

.fright {
  float: right;
}

/* 清除浮动 */

.clear {
  clear: both;
}

.clearfix:after {
  content: "\0020";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;
}

.clearfix {
  zoom: 1;
}

/* 只显示一行超出以省略号代替(有些浏览器需加宽度起作用) */

.ellipsis {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/*flex布局*/

.flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}

/* 垂直显示 */

.flex-column {
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  flex-direction: column;
}

.flex1 {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}

.flex2 {
  flex: 2;
  -webkit-box-flex: 2;
  -ms-flex: 2;
}

.flex3 {
  flex: 3;
  -webkit-box-flex: 3;
  -ms-flex: 3;
}

/* 换行 */

.flex-wrap {
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
}

/* 垂直居中 */

.flex-align-center {
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

/* 水平居中 */

.flex-pack-center {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
}

/* 两端对齐 */

.flex-pack-justify {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
}

/* 全屏阴影 */

.masks {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(9, 9, 9, 0.60);
  z-index: 100;
}
